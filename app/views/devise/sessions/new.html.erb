<% provide(:login, "active") %>
<% provide(:title, "登入") %>

<div class="col-md-4 col-md-offset-4">
  <div class="login-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">登入</h3>
    </div>
    <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div id="error_explanation" class="col-md-12">
        <%= devise_error_messages! %>
      </div>

      <div class="col-md-12">
        <%= f.input :email, :label=>false, required: false, autofocus: true, placeholder: "sophia@example.com" %>
        <%= f.input :password, :label=>false, required: false, autocomplete: "off", placeholder: "Password" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class="form-actions">
          <%= f.button :submit, "登入", class: "btn btn-large btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <div>
    <%= render "devise/shared/links" %>
  </div>
</div>

