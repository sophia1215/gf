<% provide(:register, "active") %>
<% provide(:title, "註冊") %>

<div class="col-md-4 col-md-offset-4">
  <div class="register-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">註冊</h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div id="error_explanation" class="col-md-12">
        <%= devise_error_messages! %>
      </div>

      <div class="col-md-12">
        <%= f.input :first_name, :label=>false, required: true, autofocus: true, placeholder: "First Name" %>
        <%= f.input :last_name, :label=>false, required: true, autofocus: true, placeholder: "Last Name" %>

        <%= f.input :gender, :label=>false, collection: ['male','female'], prompt: "Select your gender" %>

        <%= f.input :email, :label=>false, required: true, autofocus: true, placeholder: "sophia@example.com" %>
        <%= f.input :password, :label=>false, required: true, autocomplete: "off", placeholder: "Password 6 characters minimum" %>
        <%= f.input :password_confirmation, :label=>false, required: true, autocomplete: "off", placeholder: "Password Confirmation" %>

        <div class="actions shared_links">
          <%= f.submit "註冊", class: "btn btn-large btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <div>
    <%= render "devise/shared/links" %>
  </div>
</div>