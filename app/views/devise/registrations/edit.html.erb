<% provide(:edit_profile, "active") %>
<% provide(:title, "編輯個人檔案")%>

<% content_for(:sidebar) do %>
  <%= render "common/sidebar" %>
<% end %>

<div class="col-md-4 col-md-offset-4">
  <div class="register-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">編輯個人檔案</h3>
    </div>
    <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, placeholder: "First Name", required: true, autofocus: true %>
        <%= f.input :last_name, placeholder: "Last Name", required: true, autofocus: true %>

        <%= f.input :gender, as: :select, collection: [['Male', 'male'], ['Female', 'female']], prompt: 'none' %>

        <%= f.input :email, placeholder: "sophia@example.com", required: true, autofocus: true %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, autocomplete: "off", placeholder: "如果您不想變更密碼，此欄位請留白", required: false %>
        <%= f.input :password_confirmation, placeholder: "如果您不想變更密碼，此欄位請留白", required: false %>
        <%= f.input :current_password, placeholder: "我們需要您目前的密碼，以確認您的更改", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "儲存變更", class: "btn btn-large btn-primary btn-block" %>
      </div>
    <% end %>
    </div>
  </div>

  <div>
    <h3>Cancel my account</h3>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-large btn-primary btn-block" %></p>

    <%= link_to "Back", :back %>
  </div>
</div>